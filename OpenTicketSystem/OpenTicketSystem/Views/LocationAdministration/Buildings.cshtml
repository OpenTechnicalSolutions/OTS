@model System.Collections.Generic.List<Building>

@{
    ViewData["Title"] = "Buildings";
}

<h2>Buildings</h2>


<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a asp-action="Departments" class="nav-link">Departments</a>
    </li>
    <li class="nav-item">
        <a asp-action="Buildings" class="nav-link active">Buildings</a>
    </li>
</ul>
<button class="btn btn-primary" type="button" asp-action="AddBuilding">New Building</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.Id</th>
                <td>@d.Name</td>
                <td>@d.Description</td>
                <td><button class="btn btn-primary" type="button" asp-action="BuildingDetails" asp-route-deptid="@d.Id">Details</button></td>
            </tr>
        }
    </tbody>
</table>

