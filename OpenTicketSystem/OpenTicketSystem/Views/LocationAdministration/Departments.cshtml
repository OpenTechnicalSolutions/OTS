@model System.Collections.Generic.List<DepartmentModel>


@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>


<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a asp-action="Departments" class="nav-link active">Departments</a>
    </li>
    <li class="nav-item">
        <a asp-action="Buildings" class="nav-link">Buildings</a>
    </li>
</ul>
<button class="btn btn-primary" asp-action="AddDepartment">New Department</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var d in Model)
    {
        <tr>
            <th scope="row">@d.Id</th>
            <td>@d.Name</td>
            <td>@d.Description</td>
            <td><button class="btn btn-primary" type="button" asp-action="DepartmentDetails" asp-route-deptid="@d.Id"/></td>
        </tr>
    }
    </tbody>
</table>

